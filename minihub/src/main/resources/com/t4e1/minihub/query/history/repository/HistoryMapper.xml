<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.t4e1.minihub.query.history.repository.HistoryMapper">

    <resultMap id="record" type="com.t4e1.minihub.query.history.dto.RecordDTO">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="path" column="img_path"/>
        <result property="tags" column="tags" typeHandler="com.t4e1.minihub.config.ArrayTypeHandler"/>
        <result property="pwd" column="pwd"/>
    </resultMap>

    <sql id="Basic_Select">
        H.id,
        H.title,
        H.content,
        H.img_path,
        H.tags[:],
        H.pwd
    </sql>

    <!--  전체 기록 조회  -->
    <select id="selectList" resultMap="record">
        SELECT
        <include refid="Basic_Select"/>
        FROM history H
    </select>

    <!--  특정 기록 조회  -->
    <select id="selectRecord" resultMap="record" parameterType="_int">
        SELECT
        <include refid="Basic_Select"/>
        FROM history H
        WHERE H.id = ${id}
    </select>

</mapper>